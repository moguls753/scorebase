<%# Hub Card - Icon Style (used for Instruments)
    Local variables:
    - item: Hash - Item data with :name, :slug, :count
    - path: String - URL path for the link
    - icon: String - Emoji icon to display
    - search_attribute: String - Data attribute name for search (e.g., "instrumentName")
    - index: Integer - Card index for animation delay
%>
<%= link_to path,
    class: "hub-card hub-card--icon mm-card group",
    style: hub_card_style(index || 0),
    data: {
      list_filter_target: "item",
      search_attribute => item[:name].to_s.downcase
    } do %>
  <div class="hub-card__icon"><%= icon %></div>
  <h3 class="hub-card__name" data-list-filter-target="itemName">
    <%= item[:name] %>
  </h3>
  <span class="hub-card__count">
    <%= number_with_delimiter(item[:count]) %>
  </span>
<% end %>
