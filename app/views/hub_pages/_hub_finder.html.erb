<%# Hub Fuzzy Finder
    Local variables:
    - placeholder: String - Search input placeholder text
    - clear_label: String - Clear button aria-label
%>
<div class="hub-finder mb-8 mx-auto">
  <div class="hub-finder__input-wrap">
    <svg class="hub-finder__icon" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
    </svg>
    <input
      type="text"
      class="hub-finder__input"
      placeholder="<%= placeholder %>"
      autocomplete="off"
      spellcheck="false"
      data-list-filter-target="input"
      data-action="input->list-filter#search"
    >
    <button type="button"
            class="hub-finder__clear"
            aria-label="<%= clear_label %>"
            data-list-filter-target="clear"
            data-action="list-filter#clear">
      <svg viewBox="0 0 20 20" fill="currentColor">
        <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
      </svg>
    </button>
  </div>
  <div class="hub-finder__results" data-list-filter-target="resultsCount"></div>
</div>
