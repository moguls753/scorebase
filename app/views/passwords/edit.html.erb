<% content_for :title, t('auth.set_password_title') %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title"><%= t('auth.set_new_password') %></h1>
      <p class="auth-subtitle"><%= t('auth.choose_strong_password') %></p>
    </div>

    <% if flash[:alert] %>
      <div class="auth-alert auth-alert-error"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "auth-form" do |form| %>
      <div class="auth-field">
        <label class="auth-label" for="password"><%= t('auth.new_password') %></label>
        <%= form.password_field :password,
            id: "password",
            required: true,
            autofocus: true,
            autocomplete: "new-password",
            placeholder: t('auth.password_hint'),
            maxlength: 72,
            class: "mm-input" %>
      </div>

      <div class="auth-field">
        <label class="auth-label" for="password_confirmation"><%= t('auth.confirm_password') %></label>
        <%= form.password_field :password_confirmation,
            id: "password_confirmation",
            required: true,
            autocomplete: "new-password",
            placeholder: t('auth.confirm_password_placeholder'),
            maxlength: 72,
            class: "mm-input" %>
      </div>

      <%= form.submit t('auth.update_password'), class: "mm-button mm-button-primary auth-submit" %>
    <% end %>
  </div>
</div>
