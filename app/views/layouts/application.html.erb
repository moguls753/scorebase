<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title><%= content_for(:title) || t('meta.title') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= t('meta.description') %>">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="ScoreBase">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/icon.svg">
    <link rel="icon" type="image/png" href="/icon.png">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <!-- Open Graph / Social Sharing -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="<%= content_for(:title) || t('meta.title') %>">
    <meta property="og:description" content="<%= t('meta.description') %>">
    <meta property="og:image" content="/og-image.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta name="twitter:card" content="summary_large_image">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="relative z-10 bg-[var(--color-bg-elevated)] border-b-2 border-[var(--color-border)]">
      <div class="max-w-7xl mx-auto px-6 py-6">
        <div class="flex items-center justify-between">
          <!-- Logo & Source Info -->
          <div>
            <%= link_to root_path, class: "group" do %>
              <h1 class="text-3xl font-[var(--font-family-display)] text-[var(--color-primary)] font-black tracking-tight transition-all hover:text-[var(--color-accent)]">
                SCORE<span class="text-[var(--color-accent)]">BASE</span>
              </h1>
            <% end %>
            <p class="text-[10px] text-[var(--color-text-muted)] font-medium tracking-wide mt-0.5">
              <%= t('meta.sources_tagline') %>
            </p>
          </div>

          <!-- Navigation -->
          <nav class="flex items-center gap-2">
            <%= link_to about_path, class: "nav-icon-btn", aria: { label: t('nav.about') }, title: t('nav.about') do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 16v-4"></path>
                <path d="M12 8h.01"></path>
              </svg>
            <% end %>
            <!-- Language Toggle -->
            <%= link_to url_for(locale: I18n.locale == :en ? :de : :en),
                class: "nav-icon-btn nav-icon-btn--text",
                aria: { label: t('nav.toggle_language') },
                title: t('nav.toggle_language'),
                data: { turbo_action: "replace" } do %>
              <span class="nav-lang-text"><%= I18n.locale == :en ? 'DE' : 'EN' %></span>
            <% end %>
            <!-- Theme Toggle -->
            <div data-controller="theme">
              <button type="button"
                      data-action="click->theme#toggle"
                      data-theme-target="toggle"
                      class="nav-icon-btn"
                      aria-label="<%= t('nav.toggle_dark_mode') %>"
                      title="<%= t('nav.toggle_dark_mode') %>">
                <svg data-theme-target="sunIcon" class="nav-theme-icon nav-theme-icon--sun" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="5"></circle>
                  <line x1="12" y1="1" x2="12" y2="3"></line>
                  <line x1="12" y1="21" x2="12" y2="23"></line>
                  <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                  <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                  <line x1="1" y1="12" x2="3" y2="12"></line>
                  <line x1="21" y1="12" x2="23" y2="12"></line>
                  <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                  <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                </svg>
                <svg data-theme-target="moonIcon" class="nav-theme-icon nav-theme-icon--moon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
              </button>
            </div>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="relative z-10 flex-1">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="relative z-10 bg-[var(--color-bg-elevated)] border-t-2 border-[var(--color-border)] mt-20">
      <div class="max-w-7xl mx-auto px-6 py-8">
        <div class="flex items-center justify-between text-xs">
          <p class="text-[var(--color-text-muted)] font-medium">
            <span class="font-bold text-[var(--color-accent)]"><%= number_with_delimiter(Score.count) %></span> <%= t('footer.public_domain_scores') %>
          </p>
          <p class="text-[var(--color-text-muted)] font-medium">
            <a href="https://github.com/moguls753/scorebase" target="_blank" rel="noopener nofollow" class="hover:text-[var(--color-primary)] transition-colors"><%= t('nav.github') %></a>
            <span class="mx-2">Â·</span>
            <%= link_to t('nav.impressum'), impressum_path, class: "hover:text-[var(--color-primary)] transition-colors" %>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
