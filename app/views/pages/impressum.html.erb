<section class="py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-2xl mx-auto">
      <!-- Header -->
      <header class="mb-12 md:mb-16 animate-fadeInUp">
        <div class="flex items-end gap-4 mb-4">
          <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-[var(--color-accent)] font-[var(--font-family-display)]">Legal</span>
          <div class="flex-1 h-[2px] bg-[var(--color-accent)] mb-0.5"></div>
        </div>
        <h1 class="text-4xl md:text-5xl font-[var(--font-family-display)] font-black uppercase tracking-tight text-[var(--color-primary)]">
          Impressum
        </h1>
      </header>

      <!-- Contact Card -->
      <div class="mm-card p-6 md:p-8 mb-6 animate-fadeInUp delay-100">
        <div class="flex items-center gap-2 mb-6">
          <svg class="w-4 h-4 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <h2 class="text-xs font-bold uppercase tracking-[0.15em] text-[var(--color-accent)] font-[var(--font-family-display)]">
            Contact
          </h2>
        </div>

        <div class="space-y-4">
          <div>
            <p class="text-xl md:text-2xl font-[var(--font-family-display)] font-bold text-[var(--color-primary)]">
              Eike Rackwitz
            </p>
            <p class="text-sm text-[var(--color-text-muted)] mt-1 flex items-center gap-1.5">
              <svg class="w-3.5 h-3.5 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Halle (Saale), Germany
            </p>
          </div>

          <div class="pt-4 border-t border-[var(--color-border-subtle)]">
            <a href="mailto:scorebase.contact@gmail.com"
               class="group inline-flex items-center gap-2 text-sm font-semibold text-[var(--color-primary)] hover:text-[var(--color-accent)] transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="group-hover:underline underline-offset-2">
                scorebase.contact@gmail.com
              </span>
            </a>
          </div>
        </div>
      </div>

      <!-- Privacy Card -->
      <div class="mm-card p-6 md:p-8 animate-fadeInUp delay-200">
        <div class="flex items-center gap-2 mb-6">
          <svg class="w-4 h-4 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <h2 class="text-xs font-bold uppercase tracking-[0.15em] text-[var(--color-accent)] font-[var(--font-family-display)]">
            Privacy
          </h2>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div class="p-4 bg-[var(--color-bg)] border border-[var(--color-border-subtle)] rounded-sm">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-4 h-4 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
              </svg>
              <span class="text-xs font-bold uppercase tracking-wide text-[var(--color-text)]">No Cookies</span>
            </div>
            <p class="text-xs text-[var(--color-text-muted)]">Keine Cookies</p>
          </div>

          <div class="p-4 bg-[var(--color-bg)] border border-[var(--color-border-subtle)] rounded-sm">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-4 h-4 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.542 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
              </svg>
              <span class="text-xs font-bold uppercase tracking-wide text-[var(--color-text)]">No Tracking</span>
            </div>
            <p class="text-xs text-[var(--color-text-muted)]">Keine Nutzungsdaten</p>
          </div>
        </div>

        <p class="text-sm text-[var(--color-text-muted)] leading-relaxed text-center">
          ScoreBase respects your privacy. No tracking, no profilingâ€”just music.
        </p>
      </div>

      <!-- Navigation -->
      <div class="mt-12 flex items-center justify-center gap-4 animate-fadeInUp delay-300">
        <%= link_to root_path, class: "mm-button mm-button-secondary text-xs px-6 py-2.5 inline-flex items-center gap-2" do %>
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Search
        <% end %>
        <%= link_to about_path, class: "mm-button mm-button-secondary text-xs px-6 py-2.5 inline-flex items-center gap-2" do %>
          About
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</section>
