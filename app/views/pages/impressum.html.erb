<section class="py-20 md:py-28">
  <div class="max-w-xl mx-auto px-6 md:px-8">
    <!-- Header -->
    <div class="text-center mb-12 md:mb-16 animate-fadeInUp">
      <h2 class="text-3xl md:text-4xl font-[var(--font-family-display)] font-black uppercase tracking-tight text-[var(--color-primary)]">
        Impressum
      </h2>
    </div>

    <!-- Contact Card -->
    <div class="mm-card p-8 md:p-10 animate-fadeInUp delay-100">
      <!-- Contact Section -->
      <div class="mb-8 pb-8 border-b-2 border-[var(--color-border-subtle)]">
        <h3 class="text-xs font-[var(--font-family-display)] font-bold uppercase tracking-widest text-[var(--color-accent)] mb-4">
          Contact
        </h3>
        <p class="text-base md:text-lg text-[var(--color-text)] font-medium mb-2">
          Eike Rackwitz
        </p>
        <p class="text-sm text-[var(--color-text-muted)] mb-4">
          Halle (Saale), Germany
        </p>
        <a href="mailto:scorebase.contact@gmail.com"
           class="inline-flex items-center gap-2 text-sm font-semibold text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          scorebase.contact@gmail.com
        </a>
      </div>

      <!-- Privacy Section -->
      <div>
        <h3 class="text-xs font-[var(--font-family-display)] font-bold uppercase tracking-widest text-[var(--color-accent)] mb-4">
          Datenschutz / Privacy
        </h3>
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 rounded-sm bg-[var(--color-bg-elevated)] border-2 border-[var(--color-border-subtle)] flex items-center justify-center shrink-0">
            <svg class="w-4 h-4 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
            Keine Cookies, keine Nutzungsdaten.<br>
            <span class="text-[var(--color-text-muted)] opacity-75">No cookies, no usage data collected.</span>
          </p>
        </div>
      </div>
    </div>

    <!-- Back link -->
    <div class="mt-12 md:mt-16 text-center animate-fadeInUp delay-200">
      <%= link_to "Back to Search", root_path, class: "mm-button mm-button-secondary text-xs px-6 py-2" %>
    </div>
  </div>
</section>
