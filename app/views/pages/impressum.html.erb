<section class="py-24 md:py-36">
  <div class="max-w-2xl mx-auto px-6 md:px-12">
    <!-- Header -->
    <div class="text-center mb-16 md:mb-20 animate-fadeInUp">
      <h2 class="text-4xl md:text-5xl font-[var(--font-family-display)] font-black uppercase tracking-tight text-[var(--color-primary)]">
        Impressum
      </h2>
    </div>

    <!-- Contact Card -->
    <div class="mm-card p-10 md:p-14 animate-fadeInUp delay-100">
      <!-- Contact Section -->
      <div class="text-center mb-12 pb-12 border-b-2 border-[var(--color-border-subtle)]">
        <h3 class="text-sm font-[var(--font-family-display)] font-bold uppercase tracking-widest text-[var(--color-accent)] mb-6">
          Contact
        </h3>
        <p class="text-2xl md:text-3xl text-[var(--color-text)] font-semibold mb-3">
          Eike Rackwitz
        </p>
        <p class="text-base md:text-lg text-[var(--color-text-muted)] mb-8">
          Halle (Saale), Germany
        </p>
        <a href="mailto:scorebase.contact@gmail.com"
           class="inline-flex items-center gap-3 text-base md:text-lg font-semibold text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          scorebase.contact@gmail.com
        </a>
      </div>

      <!-- Privacy Section -->
      <div class="text-center">
        <h3 class="text-sm font-[var(--font-family-display)] font-bold uppercase tracking-widest text-[var(--color-accent)] mb-6">
          Datenschutz / Privacy
        </h3>
        <div class="inline-flex items-center justify-center gap-4 mb-4">
          <div class="w-12 h-12 rounded-sm bg-[var(--color-bg-elevated)] border-2 border-[var(--color-border-subtle)] flex items-center justify-center">
            <svg class="w-6 h-6 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
        </div>
        <p class="text-base md:text-lg text-[var(--color-text-muted)] leading-relaxed">
          Keine Cookies, keine Nutzungsdaten.
        </p>
        <p class="text-sm md:text-base text-[var(--color-text-muted)] opacity-75 mt-2">
          No cookies, no usage data collected.
        </p>
      </div>
    </div>

    <!-- Back link -->
    <div class="mt-16 md:mt-20 text-center animate-fadeInUp delay-200">
      <%= link_to "Back to Search", root_path, class: "mm-button mm-button-secondary text-xs px-8 py-3" %>
    </div>
  </div>
</section>
