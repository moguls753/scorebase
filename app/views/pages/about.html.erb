<section class="py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <header class="mb-16 md:mb-20">
        <div class="flex items-end gap-4 mb-4">
          <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-[var(--color-accent)] font-[var(--font-family-display)]"><%= t('about.label') %></span>
          <div class="flex-1 h-[2px] bg-[var(--color-accent)] mb-0.5"></div>
        </div>
        <h1 class="text-5xl md:text-6xl font-[var(--font-family-display)] font-black uppercase leading-[0.9] tracking-tight text-[var(--color-primary)]">
          Score<span class="text-[var(--color-accent)]">Base</span>
        </h1>
        <p class="mt-6 text-lg md:text-xl text-[var(--color-text-muted)] font-medium max-w-xl leading-relaxed">
          <%= t('about.subtitle') %>
        </p>
      </header>

      <!-- About -->
      <div class="mb-16 md:mb-20">
        <div class="mm-card p-8 md:p-12">
          <div class="relative pl-6 border-l-[3px] border-[var(--color-accent)]">
            <p class="text-xl md:text-2xl font-[var(--font-family-display)] text-[var(--color-primary)] leading-snug font-semibold">
              <%= t('about.why_exists_title') %>
            </p>
            <p class="mt-4 text-base text-[var(--color-text-muted)] leading-relaxed">
              <%= t('about.why_exists_p1') %>
            </p>
            <p class="mt-3 text-base text-[var(--color-text-muted)] leading-relaxed">
              <%= t('about.why_exists_p2') %>
            </p>
          </div>
        </div>
      </div>

      <!-- Features -->
      <div class="mb-16 md:mb-20">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-xs font-bold uppercase tracking-[0.15em] text-[var(--color-accent)] font-[var(--font-family-display)]"><%= t('about.features_title') %></h2>
          <div class="flex-1 h-px bg-[var(--color-border-subtle)]"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% (1..3).each do |i| %>
            <div class="mm-card p-5 md:p-6 flex gap-4 items-start">
              <div class="min-w-0">
                <h3 class="font-[var(--font-family-display)] font-semibold text-[var(--color-primary)] text-sm mb-1">
                  <%= t("about.feature_#{i}_title") %>
                </h3>
                <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
                  <%= t("about.feature_#{i}_desc") %>
                </p>
              </div>
            </div>
          <% end %>

          <!-- Work in Progress -->
          <div class="mm-card p-5 md:p-6 flex gap-4 items-start border-dashed border-[var(--color-border-subtle)]">
            <div class="min-w-0">
              <h3 class="font-[var(--font-family-display)] font-semibold text-[var(--color-text-muted)] text-sm mb-1">
                <%= t('about.feature_4_title') %>
              </h3>
              <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
                <%= t('about.feature_4_desc') %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Why Pro? -->
      <div class="mb-16 md:mb-20">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-xs font-bold uppercase tracking-[0.15em] text-[var(--color-accent)] font-[var(--font-family-display)]"><%= t('about.transparency_title') %></h2>
          <div class="flex-1 h-px bg-[var(--color-border-subtle)]"></div>
        </div>

        <div class="mm-card p-8 md:p-12">
          <div class="relative pl-6 border-l-[3px] border-[var(--color-accent)]">
            <p class="text-base text-[var(--color-text-muted)] leading-relaxed">
              <%= t('about.transparency_p1') %>
            </p>
          </div>
        </div>
      </div>

      <!-- Sources -->
      <div>
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-xs font-bold uppercase tracking-[0.15em] text-[var(--color-accent)] font-[var(--font-family-display)]"><%= t('about.sources_title') %></h2>
          <div class="flex-1 h-px bg-[var(--color-border-subtle)]"></div>
        </div>

        <div class="space-y-3">
          <!-- IMSLP -->
          <div class="source-item">
            <div class="source-item__header">
              <span class="mm-badge-source mm-badge-imslp">IMSLP</span>
              <span class="source-item__count"><%= number_with_delimiter(@source_counts['imslp'] || 0) %></span>
            </div>
            <div class="source-item__content">
              <a href="https://imslp.org" target="_blank" rel="nofollow noopener" class="source-item__link">
                <%= t('about.imslp_name') %> <span class="source-item__arrow">→</span>
              </a>
              <p class="source-item__desc"><%= t('about.imslp_description') %></p>
            </div>
          </div>

          <!-- CPDL -->
          <div class="source-item">
            <div class="source-item__header">
              <span class="mm-badge-source mm-badge-cpdl">CPDL</span>
              <span class="source-item__count"><%= number_with_delimiter(@source_counts['cpdl'] || 0) %></span>
            </div>
            <div class="source-item__content">
              <a href="https://www.cpdl.org" target="_blank" rel="nofollow noopener" class="source-item__link">
                <%= t('about.cpdl_name') %> <span class="source-item__arrow">→</span>
              </a>
              <p class="source-item__desc"><%= t('about.cpdl_description') %></p>
            </div>
          </div>

          <!-- PDMX -->
          <div class="source-item">
            <div class="source-item__header">
              <span class="mm-badge-source mm-badge-pdmx">PDMX</span>
              <span class="source-item__count"><%= number_with_delimiter(@source_counts['pdmx'] || 0) %></span>
            </div>
            <div class="source-item__content">
              <a href="https://github.com/pnlong/PDMX" target="_blank" rel="nofollow noopener" class="source-item__link">
                <%= t('about.pdmx_name') %> <span class="source-item__arrow">→</span>
              </a>
              <p class="source-item__desc"><%= t('about.pdmx_description') %></p>
            </div>
          </div>

          <!-- OpenScore -->
          <div class="source-item">
            <div class="source-item__header">
              <span class="mm-badge-source mm-badge-openscore">OpenScore</span>
              <span class="source-item__count"><%= number_with_delimiter((@source_counts['openscore-lieder'] || 0) + (@source_counts['openscore-quartets'] || 0)) %></span>
            </div>
            <div class="source-item__content">
              <a href="https://musescore.com/openscore" target="_blank" rel="nofollow noopener" class="source-item__link">
                <%= t('about.openscore_name') %> <span class="source-item__arrow">→</span>
              </a>
              <p class="source-item__desc"><%= t('about.openscore_description') %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-16 text-center">
        <%= link_to root_path, class: "mm-button mm-button-primary text-xs px-8 py-3" do %>
          <%= t('about.back_to_search') %>
        <% end %>
      </div>
    </div>
  </div>
</section>
