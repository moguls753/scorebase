<section class="py-20 md:py-28">
  <div class="max-w-3xl mx-auto px-6 md:px-8">
    <!-- Header -->
    <div class="text-center mb-16 md:mb-20 animate-fadeInUp">
      <h2 class="text-4xl md:text-5xl font-[var(--font-family-display)] mb-6 font-black uppercase tracking-tight text-[var(--color-primary)]">
        About ScoreBase
      </h2>
      <p class="text-lg md:text-xl text-[var(--color-text-muted)] font-medium max-w-xl mx-auto leading-relaxed">
        A unified search for public domain music scores
      </p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-16 md:mb-20 animate-fadeInUp delay-100">
      <div class="mm-card p-5 md:p-6 text-center">
        <p class="text-2xl md:text-3xl font-black text-[var(--color-accent)]"><%= number_with_delimiter(@total_count) %></p>
        <p class="text-xs text-[var(--color-text-muted)] font-semibold uppercase tracking-wide mt-1">Total Scores</p>
      </div>
      <% %w[cpdl imslp pdmx].each do |source| %>
        <div class="mm-card p-5 md:p-6 text-center">
          <p class="text-2xl md:text-3xl font-black text-[var(--color-primary)]"><%= number_with_delimiter(@source_counts[source] || 0) %></p>
          <p class="text-xs text-[var(--color-text-muted)] font-semibold uppercase tracking-wide mt-1"><%= source.upcase %></p>
        </div>
      <% end %>
    </div>

    <!-- What is ScoreBase -->
    <div class="mm-card p-8 md:p-10 mb-10 md:mb-12 animate-fadeInUp delay-200">
      <p class="text-base md:text-lg text-[var(--color-text-muted)] leading-relaxed">
        Public domain music scores are spread across multiple archives—IMSLP, CPDL, PDMX—each with different interfaces. ScoreBase combines them into one search.
      </p>
    </div>

    <!-- Sources -->
    <div class="mm-card p-8 md:p-10 animate-fadeInUp delay-300">
      <h3 class="text-xl md:text-2xl font-[var(--font-family-display)] font-bold text-[var(--color-primary)] mb-8 uppercase tracking-tight">
        Our Sources
      </h3>
      <div class="space-y-8">
        <div class="flex items-start gap-5">
          <span class="mm-badge-source mm-badge-imslp shrink-0 mt-0.5">IMSLP</span>
          <div>
            <p class="text-sm md:text-base text-[var(--color-text-muted)] leading-relaxed">
              The International Music Score Library Project. The largest collection of public domain music scores,
              with hundreds of thousands of works from classical composers.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-5">
          <span class="mm-badge-source mm-badge-cpdl shrink-0 mt-0.5">CPDL</span>
          <div>
            <p class="text-sm md:text-base text-[var(--color-text-muted)] leading-relaxed">
              The Choral Public Domain Library. Focused on choral and vocal music, including sacred works,
              madrigals, and art songs.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-5">
          <span class="mm-badge-source mm-badge-pdmx shrink-0 mt-0.5">PDMX</span>
          <div>
            <p class="text-sm md:text-base text-[var(--color-text-muted)] leading-relaxed">
              Public Domain MusicXML. A curated collection of scores in MusicXML format,
              ideal for digital music notation software.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Back link -->
    <div class="mt-12 md:mt-16 text-center animate-fadeInUp delay-400">
      <%= link_to "Back to Search", root_path, class: "mm-button mm-button-secondary text-xs px-6 py-2" %>
    </div>
  </div>
</section>
