<% content_for :title, "Sign up â€” ScoreBase Pro" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Create account</h1>
      <p class="auth-subtitle">Start using Smart Search</p>
    </div>

    <% if flash[:alert] %>
      <div class="auth-alert auth-alert-error"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with model: @user, url: user_path, class: "auth-form" do |form| %>
      <% if @user.errors.any? %>
        <div class="auth-alert auth-alert-error">
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="auth-field">
        <label class="auth-label" for="email_address">Email</label>
        <%= form.email_field :email_address,
            id: "email_address",
            required: true,
            autofocus: true,
            autocomplete: "email",
            placeholder: "you@example.com",
            class: "mm-input" %>
      </div>

      <div class="auth-field">
        <label class="auth-label" for="password">Password</label>
        <%= form.password_field :password,
            id: "password",
            required: true,
            autocomplete: "new-password",
            placeholder: "At least 8 characters",
            maxlength: 72,
            class: "mm-input" %>
      </div>

      <div class="auth-field">
        <label class="auth-label" for="password_confirmation">Confirm password</label>
        <%= form.password_field :password_confirmation,
            id: "password_confirmation",
            required: true,
            autocomplete: "new-password",
            placeholder: "Repeat your password",
            maxlength: 72,
            class: "mm-input" %>
      </div>

      <%= form.submit "Create account", class: "mm-button mm-button-primary auth-submit" %>
    <% end %>

    <div class="auth-footer">
      Already have an account? <%= link_to "Sign in", new_session_path, class: "auth-footer-link" %>
    </div>
  </div>
</div>
